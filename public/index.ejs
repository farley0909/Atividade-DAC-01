<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Atividade DAC - 01</title>
    <style>
        * {
            margin: 0px;
            padding: 0px;
           
        }
        body {
            background-color: black;
            overflow-x: hidden; 
        }
        #mainContainer {
            background-color: rgb(49, 49, 49);
            text-align: center;
            max-height: 100%;  
            min-height: 100vh;  
            flex-direction: row; 
            min-width: 100vw;
            padding: 20px;
            
        }
        #mainContainer h1 {
            color: rgb(202, 201, 201);
        }
        #nomeEditora {
            max-width: 15vw;
            max-height: 7vh;
        }
        #inputLivro {
            min-width: 20vw;
            max-width: 20vw;
            max-height: 7vh;
        }
        #contentContainer {
            display: flex;
            flex-direction: row;
            background-color: rgb(26, 25, 25);
            justify-content: space-between;
            max-width: 80vw;
            color: rgb(202, 201, 201);
            min-height: 80vh;
            padding: 50px;
            border-radius: 10px;
            box-shadow: 1px 1px 4px rgb(189, 189, 189);
        }
        #btnAddLivro {
            background-color: black;
            border-color: black;
        }
        #btnAddEditora {
            background-color: black;
            border-color: black;
        }
        #localOrigemEditora {
            min-width: 5vw;
            max-width: 15vw;
            max-height: 7vh;
            border-left: 2px solid black;
        }
        .editoraItem {
            padding: 10px;
            min-width: 20vw;
            max-width: 60vw;
            max-height: 12vh;
            border-radius: 10px;
            margin-bottom: 4vh;
            background-color: rgb(46, 46, 46);
            justify-content: space-between;
            display: flex;
            flex-direction: row;
        }
        .editoraItemTitle {
            font-size: larger;
            color: white;
        }
        .editoraItemSubTitle{
            font-size: medium;
        }
        .editoraTexts {
            flex-direction: column;
        }
        .editoraButtons {
            display: flex;
            justify-content: space-between;
            min-width: 5vw;
            max-width: 20vw;
            padding: 5px;
        }
        .btnEdit {
            border-radius: 10px;
            max-width: 4vw;
            min-width: 4vw;
            margin-right: 1vw;
            border: none;
        }
        .btnDelete {
            border-radius: 10px;
            max-width: 4vw;
            min-width: 4vw;
            border: none;
        }
        #crudEditora {
            display: flex;
            flex-direction: column;
            min-height: 40vh;
            max-height: fit-content;
        }
        .modal-body input {
            margin-top: 2vh;
            margin-bottom: 2vh;
        }
        .modal-body {
         text-align: left;
        }
        .modal-body label{
        font-weight: 600;
        }
        #tituloLivroInput {
            min-width: 15vw;
            max-width: 15vw;
            max-height: 7vh;  
        }
        #dataLancamentoInput {
            min-width: 15vw;
            max-width: 15vw;
            max-height: 7vh; 
        }
    </style>
    <base href="/">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body>
    <div class="container" id="mainContainer">
        <h1>Atividade DAC - 01</h1>
        <main class="container" id="contentContainer">
            <section id="crudEditora">
                <h2>Adicionar editora</h2>
                <div class="input-group">
                    <input class="form-control" placeholder="Nome da editora" type="text" id="nomeEditora">
                    <input class="form-control" placeholder="Local de origem" type="text" id="localOrigemEditora">
                    <div class="col-auto">
                        <button id="btnAddEditora" type="submit" class="btn btn-primary mb-3"><span class="material-symbols-outlined">add</span></button>
                    </div>
                </div>
                <% if(editoras){%>
                   <%editoras.data.forEach(el => {%>
                    <div class="editoraItem">
                        <div class="editoraTexts">
                            <h3 class="editoraItemTitle"><%=el.nomeFantasia%></h3>
                            <h4 class="editoraItemSubTitle"><%=el.localDeOrigem%></h4>
                        </div>
                        <div class="editoraButtons">
                            <button class="btnEdit" onclick="editarEditora('<%=el.codigo%>')" data-bs-toggle="modal" data-bs-target="#exampleModal"><span class="material-symbols-outlined">edit</span></button>
                            <button onclick="deleteEditora('<%=el.codigo%>')" class="btnDelete"><span class="material-symbols-outlined">delete</span></button>
                        </div>
                    </div>   
                    <%})%>
                <%}%>
             

            </section>
            <section id="crudLivro">
                <h2>Adicionar Livro</h2>
                <div class="input-group">
                    <input class="form-control" placeholder="Titulo do livro" type="text" id="tituloLivroInput">
                    <input class="form-control" placeholder="Data de lançamento" type="text" id="dataLancamentoInput">
                    <div class="col-auto">
                        <button id="btnAddLivro" type="submit" class="btn btn-primary mb-3"><span class="material-symbols-outlined">add</span></button>
                    </div>
                </div>
                <% if(books){%>
                    <%books.data.forEach(el => {%>
                     <div class="editoraItem">
                         <div class="editoraTexts">
                             <h3 class="editoraItemTitle"><%=el.titulo%></h3>
                             <h4 class="editoraItemSubTitle"><%=new Date(el.dataDeLancamento).toLocaleDateString()%></h4>
                         </div>
                         <div class="editoraButtons">
                             <button class="btnEdit" onclick="editarBook('<%=el.id%>')" data-bs-toggle="modal" data-bs-target="#exampleModal2"><span class="material-symbols-outlined">edit</span></button>
                             <button onclick="deleteBook('<%=el.id%>')" class="btnDelete"><span class="material-symbols-outlined">delete</span></button>
                         </div>
                     </div>   
                     <%})%>
                 <%}%>
            </section>
        </main>  
        <!--Modal-->
        <div class="modal" tabindex="-1" id="exampleModal">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Modal title</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div>
                        <label class="text-black">Nome fantasia</label>
                        <input id="editarNomeFantasia" type="text" class="form-control">
                        <label class="text-black">Local de origem</label>
                        <input id="editarLocalDeOrigem" type="text" class="form-control">
                        <input id="editarCodigo" type="text" class="form-control" hidden="hidden">
                    </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="button" id="saveEdit" class="btn btn-primary">Save changes</button>
                </div>
              </div>
            </div>
          </div>
            <!--Modal Edit book-->
        <div class="modal" tabindex="-1" id="exampleModal2">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Modal title</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div>
                        <label class="text-black">Titulo do Livro</label>
                        <input id="editarTituloDoLivro" type="text" class="form-control">
                        <label class="text-black">Data de lançamento</label>
                        <input id="editarDataDeLancamento" type="text" class="form-control">
                        <input id="idLivro" type="text" class="form-control" hidden="hidden">
                    </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="button" id="saveEditLivro" class="btn btn-primary">Save changes</button>
                </div>
              </div>
            </div>
          </div>
    </div>    
    <script src="./index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>