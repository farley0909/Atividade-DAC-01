<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Livros & Editoras</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="global.css" />

    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
  </head>
  <body class="gap-4">
    <%- include('topNav'); %>
    <div class="flex-row justify-around items-start gap-4 flex-wrap">
      <form class="gap-0.5 max-w-xl flex flex-row rounded-xl flex-wrap">
        <input
          required
          type="text"
          placeholder="Título"
          class="h-10 p-2 rounded grow"
        />
        <input
          required
          type="date"
          placeholder="Data de lançamento"
          class="h-10 p-2 rounded grow"
        />
        <button class="bg-green-600 p-2 h-10 rounded grow" type="submit">
          <span class="material-symbols-outlined">add</span>
          Adicionar
        </button>
      </form>
      <form class="flex flex-row items-stretch max-w-xl">
        <input
          type="text"
          placeholder="Pesquisar"
          class="p-2 rounded-lg grow"
        />
        <button class="p-2 h-10 rounded hover:bg-white/10 grow-0" type="submit">
          <span class="material-symbols-outlined">search</span>
        </button>
      </form>
    </div>
    <table>
      <% books.map(book =>{ %>
      <tr class="hover:bg-white/10" tabindex="1">
        <td class="p-2"><%= book.title%></td>
        <td class="opacity-50">
          <%= new Date(book.releaseDate).toLocaleDateString() %>
        </td>
        <td>
          <div class="flex-row w-fit">
            <button class="hover:bg-blue-500 p-2 px-4 md:px-6 rounded-lg">
              <span class="material-symbols-outlined">edit</span>
            </button>
            <button class="hover:bg-red-500 p-2 px-4 md:px-6 rounded-lg">
              <span class="material-symbols-outlined">delete</span>
            </button>
          </div>
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
